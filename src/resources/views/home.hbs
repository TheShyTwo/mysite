<div class="container">
    <div id="best-course" class="carousel slide" data-bs-ride="carousel">
        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            {{#each bestCourses}}
            <button type="button" data-bs-target="#best-course" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}"></button>
            {{/each}}
        </div>
        
        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            {{#each bestCourses}}
            <div class="carousel-item {{#if @first}}active{{/if}}">
                <img src="{{this.image}}" alt="{{this.name}}" class="d-block best-course" style="width:100%">
                <div class="carousel-caption">
                    <h3>{{this.name}}</h3>
                    <p>{{this.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        
        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#best-course" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#best-course" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <div class="container-fluid mt-3">
        <h3>Carousel Example</h3>
        <p>The following example shows how to create a basic carousel with indicators and controls.</p>
    </div>
</div>


<div class="container mt-2">
    <div class="row">
        {{#each courses}}
        <div class="col-12 col-sm-6 col-lg-4 mt-2">
            <div class="card" style="width:300px; height:400px">
                <img class="card-img-bottom" src="{{this.image}}" alt="{{this.name}}" style="width:100%">
                <div class="card-body">
                <h4 class="card-title">{{this.name}}</h4>
                <p class="card-text">{{formatPrice this.price}}</p>
                <a href="#" class="btn btn-primary">See detail</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


